{
	"name": "input-methods",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/danburzo/input-methods.git",
	"author": "Dan Burzo <danburzo@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"gh-pages": "^1.2.0",
		"husky": "^0.14.3",
		"immutable": "^3.8.1",
		"parcel-bundler": "^1.9.1",
		"parcel-plugin-clean-dist": "^0.0.6",
		"prettier": "^1.13.5",
		"pretty-quick": "^1.6.0",
		"react": "latest",
		"react-dom": "latest"
	},
	"scripts": {
		"start": "parcel src/index.html --out-dir dist --public-url /input-methods",
		"build": "parcel build src/index.html --public-url /input-methods --no-minify --out-dir dist",
		"deploy": "yarn build && gh-pages -d dist",
		"precommit": "pretty-quick --staged"
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 100
	}
}
